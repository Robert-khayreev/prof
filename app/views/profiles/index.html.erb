<div class="profiles-container">
  <div class="header">
    <h1>My Profiles</h1>
    <%= link_to "Create New Profile", new_profile_path, class: "btn btn-primary" %>
  </div>
  
  <% if @profiles.any? %>
    <div class="profiles-grid">
      <% @profiles.each do |profile| %>
        <div class="profile-card">
          <div class="profile-image">
            <% if profile.images.attached? %>
              <%= image_tag profile.images.first, alt: profile.name %>
            <% else %>
              <div class="no-image">No Image</div>
            <% end %>
          </div>
          
          <div class="profile-info">
            <h3><%= profile.name %>, <%= profile.age %></h3>
            <p class="description"><%= truncate(profile.description, length: 100) %></p>
            
            <div class="profile-stats">
              <div class="stat">
                <span class="stat-value"><%= profile.total_views %></span>
                <span class="stat-label">Views</span>
              </div>
              <div class="stat">
                <span class="stat-value"><%= profile.right_swipes %></span>
                <span class="stat-label">Right Swipes</span>
              </div>
              <div class="stat">
                <span class="stat-value"><%= profile.swipe_right_rate %>%</span>
                <span class="stat-label">Success Rate</span>
              </div>
            </div>
            
            <div class="profile-actions">
              <%= link_to "Analytics", analytics_profile_path(profile), class: "btn btn-small btn-info" %>
              <%= link_to "Edit", edit_profile_path(profile), class: "btn btn-small btn-secondary" %>
              <%= button_to "Delete", profile_path(profile), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-small btn-danger" %>
            </div>
            
            <div class="profile-status">
              <% if profile.active %>
                <span class="badge badge-success">Active</span>
              <% else %>
                <span class="badge badge-warning">Inactive</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <p>You haven't created any profiles yet.</p>
      <%= link_to "Create your first profile", new_profile_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
